@import url(alpha-debug.css);

 /*@import url(bartik.css);*/

@import url(tabs.css);
@import url(backgrounds.css);
@import url(typography.css);
@import url(colour.css);

/* Layout ************************************************************/

/* Toolbar */

#zone-toolbar {
	padding-top: 1em;
}

	#zone-toolbar .block {
		display: inline-block;
	}

	#zone-toolbar li {
		display: inline;
	}

	#region-toolbar-second {
		text-align: right;
	}

	#region-toolbar-first .block {
		margin-right: 1em;
 	}

	#region-toolbar-second .block {
		margin-left: 1em;
 	}

/* Header */

#zone-header {
	padding-top: 1em;
	padding-bottom: 1em;
}

	#zone-header .block {
		display: inline-block;
	}
	
	#region-header-first .block {
		margin-right: 1em;
	}
	
	#region-header-second {
		text-align: right;
	}
	
	#region-header-second .block {
		margin-left: 1em;
	}	

	#region-menu {
	}
		
		#region-menu ul li {
			display: inline;
		}

/* Content */

#zone-content {
	padding: 1em 0;
}

	#zone-content .region-inner {
		margin: 0 1em;
	}

	#region-content .block {
		padding: 1em 0;
	}

	#region-sidebar-second .block {
		padding: 1em 0;
	}

/* Footer */

#zone-footer-wrapper {
	padding-top: 1em;
}


/* Others */

/* Fix max-width 100% for Google Map */
.gmap img {
   max-width: none;
}

img {
	max-width: 100%;
}

p {
	margin-bottom: 1.2em;
}

.node {
	margin-bottom: 2em;
}

/* Breadcrumbs */
.breadcrumb {
  font-size: 0.85em;
}

	.breadcrumb li:after {
		content: ' Â»';
	}
	.breadcrumb li.last:after {
		content: none;
	}