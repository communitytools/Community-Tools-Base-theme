/* Redefine system tabs */

#region-content ul.primary {
    border: none;
    margin: 0;
    padding: 0;
    font-size: 0.8em;
}

#region-content ul.primary li.active:first-child a {
    display: none;
}

#region-content ul.primary li.active {
    display: none;
}

#region-content ul.primary li a {
    padding: 0.4em 0.8em 0.3em 0.8em;
    margin: 0;
    background: #fff;
    border: 1px solid #ccc;
    border-radius: 2px;
}

    #region-content ul.primary li a:hover {
        background: #f6f6f6;
        border: 1px solid #999;
    }